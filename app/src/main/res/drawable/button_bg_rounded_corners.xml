<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape>
            <gradient
                android:startColor="#030303"
                android:centerColor="#2f3233"
                android:endColor="#030303"
                android:angle="270"/>

            <stroke
                android:width="1dp"
                android:color="#73ffdb36" />
            <corners
                android:radius="4dp"/>
            <padding
                android:right="10dp"
                android:top="10dp"
                android:bottom="10dp"
                android:left="10dp" />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape>

            <gradient
                android:startColor="#2f3233"
                android:centerColor="#030303"
                android:endColor="#2f3233"
                android:angle="270"/>

            <stroke
                android:width="1dp"
                android:color="#73ffdb36" />
            <corners
                android:radius="4dp"/>
            <padding
                android:right="10dp"
                android:top="10dp"
                android:bottom="10dp"
                android:left="10dp" />
        </shape>

    </item>
</selector>